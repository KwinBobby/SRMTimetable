<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.knby.srmtimetable.UpdateActivity">


    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textInputLayout"
        app:layout_constraintRight_toLeftOf="@+id/guideline6"
        app:layout_constraintLeft_toLeftOf="@+id/guideline5"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout2"
        android:layout_marginBottom="16dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/teacherEntry"
            android:hint="Teacher's Name(Optional)"
            android:imeOptions="actionNext"
            android:singleLine="true"
            tools:layout_editor_absoluteY="200dp"
            tools:layout_editor_absoluteX="75dp" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/guideline6"
        app:layout_constraintLeft_toLeftOf="@+id/guideline5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textInputLayout2">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/subjectEntry"
            android:hint="Course Name(Required)"
            android:imeOptions="actionNext"
            android:singleLine="true"
            tools:layout_editor_absoluteY="264dp"
            tools:layout_editor_absoluteX="75dp"
            android:layout_weight="1" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/slot"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout"
        android:layout_marginBottom="32dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline6"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline5" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"

        android:id="@+id/fabnext"
        android:src="@drawable/ic_arrow_forward_white_48dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline5"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.083333336"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="32dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline6"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="355dp"
        app:layout_constraintGuide_percent="0.9244792" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/guideline6"
        app:layout_constraintLeft_toLeftOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
        android:layout_marginTop="16dp"
        android:id="@+id/textInputLayout3">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/roomEntry"
            android:hint="Room No(Required)"
            android:imeOptions="actionDone"
            android:singleLine="true"
            tools:layout_editor_absoluteY="327dp"
            tools:layout_editor_absoluteX="75dp"
            android:layout_weight="1" />
    </android.support.design.widget.TextInputLayout>


</android.support.constraint.ConstraintLayout>
