<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.knby.srmtimetable.EditActivity">

    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:id="@+id/inputLayoutTeacher"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/guideline4"
        app:layout_constraintBottom_toTopOf="@+id/InputLayoutSubject"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTeacher"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:hint="Teacher's Name"
            tools:layout_editor_absoluteY="86dp"
            tools:layout_editor_absoluteX="74dp"
            android:layout_weight="1" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:id="@+id/InputLayoutSubject"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/guideline4"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toTopOf="@+id/InputLayoutSlot"
        android:layout_marginBottom="16dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editSubject"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:hint="Course Name"
            tools:layout_editor_absoluteY="129dp"
            tools:layout_editor_absoluteX="74dp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/InputLayoutSlot"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline4">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editSlot"
            android:hint="Slot"
            android:singleLine="true"
            android:imeOptions="actionNext"
            tools:layout_editor_absoluteY="193dp"
            tools:layout_editor_absoluteX="74dp"
            android:layout_weight="1" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:id="@+id/InputLayoutRoom"
        app:layout_constraintTop_toBottomOf="@+id/InputLayoutSlot"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/guideline4">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editRoom"
            android:hint="Room No"
            android:singleLine="true"
            android:imeOptions="actionDone"
            tools:layout_editor_absoluteY="236dp"
            tools:layout_editor_absoluteX="74dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.083333336"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="32dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.921875"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="354dp" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@drawable/ic_check_white_48dp"
        android:id="@+id/floatingActionButton"
        android:src="@drawable/ic_check_white_48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
